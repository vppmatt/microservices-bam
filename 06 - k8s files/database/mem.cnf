[mysqld]
# Keep InnoDB small
innodb_buffer_pool_size = 64M
innodb_log_buffer_size  = 8M

# Connection-related memory
max_connections         = 20
thread_cache_size       = 8

# Caches / temps â€“ keep modest
table_open_cache        = 64
tmp_table_size          = 16M
max_heap_table_size     = 16M

# Disable query cache (5.7 still has it)
query_cache_type        = 0
query_cache_size        = 0

# Turn off performance schema to save RAM
performance_schema      = off